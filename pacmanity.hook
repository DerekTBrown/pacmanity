# Pacmanity
# Keeps a list of installed packages in a Gist at your GitHub account.

[Trigger]
Operation = Install
Operation = Upgrade
Operation = Remove
Type = Package
Target = *

[Action]
Description = Running Pacmanity hook...
Depends = coreutils
When = PostTransaction
Exec = /usr/bin/bash -c "source /usr/lib/pacmanity/pacmanity.sh && pacmanity_update"
